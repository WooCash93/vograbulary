<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:cell="urn:import:com.google.gwt.user.cellview.client">
    <ui:style>

    </ui:style>
    <g:HTMLPanel>
        <p>Choose one or more students to take the challenge.</p>
        <g:HTMLPanel ui:field="studentPanel" />
        <label>
            Minimum word length:
            <g:ListBox ui:field="wordLength">
                <g:item>4</g:item>
                <g:item>5</g:item>
                <g:item>6</g:item>
                <g:item>7</g:item>
                <g:item>8</g:item>
                <g:item>9</g:item>
            </g:ListBox>
        </label>
        <br/>
        <label>
            Computer's vocabulary size:
            <g:ListBox ui:field="vocabularySize">
                <g:item>1000</g:item>
                <g:item>2000</g:item>
                <g:item>4000</g:item>
                <g:item>8000</g:item>
                <g:item>16000</g:item>
                <g:item>32000</g:item>
            </g:ListBox>
        </label>
        <br/>
        <g:Button ui:field="startButton">Start</g:Button>
    </g:HTMLPanel>
</ui:UiBinder> 