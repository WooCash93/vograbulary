<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>
    
    </ui:style>
    <g:HTMLPanel>
        <!-- HEADER -->
        <div id="header_wrap" class="outer">
            <header class="inner">
                <h1 ui:field="letters">ABC</h1>
                <h2 ui:field="ownerName">Owner</h2>
            </header>
        </div>
        <!-- MAIN CONTENT -->
        <div id="main_content_wrap" class="outer">
            <section id="main_content" class="inner">
        
        <table>
            <tr>
                <td><g:TextBox ui:field="solution"/></td>
                <td><g:Button ui:field="solveButton" text="Solve"/></td>
            </tr>
            <tr>
                <td><g:TextBox ui:field="response"/></td>
                <td><g:Button ui:field="respondButton" text="Respond"/></td>
            </tr>
            <tr>
                <td><span ui:field="hint"/></td>
                <td><g:Button ui:field="nextButton" text="Next"/></td>
            </tr>
            <tr>
                <td>
                    <p ui:field="result">result</p>
                    <div ui:field="summary"/>
                </td>
                <td><g:Button ui:field="pauseButton" text="Pause"/></td>
            </tr>
        </table>

            </section>
        </div>
        <!-- FOOTER  -->
        <div id="footer_wrap" class="outer">
          <footer class="inner">
            <p class="copyright">by <a href="https://donkirkby.github.com">Don Kirkby</a></p>
          </footer>
        </div>
    </g:HTMLPanel>
</ui:UiBinder> 