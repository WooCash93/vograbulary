<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>
    .insertPanel {
        width: 100%;
        height: 40px;
    }
    </ui:style>
    <g:HTMLPanel>
        <p ui:field="clue"/>
        <g:AbsolutePanel ui:field="insertPanel" styleName="{style.insertPanel}">
            <g:Image url="images/insert.png" ui:field="insertButton"/>
        </g:AbsolutePanel>
        <table>
            <tr>
                <td><span class="targetWord" ui:field="targetWord1"/></td>
                <td>&nbsp;</td>
                <td><span class="targetWord" ui:field="targetWord2"/></td>
            </tr>
        </table>
        <g:Button ui:field="nextButton"/>
    </g:HTMLPanel>
</ui:UiBinder> 